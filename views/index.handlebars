<h2>Eat Your Food!</h2>
<div id="menu">
    <div id="notEaten">
        {{#each burgers}} {{#unless this.devoured}}
        <button class="toEat" data-id="{{ID}}">{{this.burger_name}}</button>
        {{/unless}} {{/each}}
    </div>
    <div id="eaten">
        {{#each burgers}} {{#if this.devoured}}
        <div class="eaten" data-id="{{ID}}">{{this.burger_name}}</div>
        {{/if}} {{/each}}
    </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <input type="text" id="bu" name="name">
    </div>

    <button type="submit">Add Burger</button>
    <p>Type in the name of the burger you want to add and hit the button.</p>
</form>